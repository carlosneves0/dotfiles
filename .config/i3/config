# win+tab
bindsym $mod+Tab workspace next_on_output
bindsym $mod+Shift+Tab workspace prev_on_output

# move workspace to output
bindsym $mod+F1 move workspace to eDP-1
bindsym $mod+F2 move workspace to HDMI-2

# Start i3bar to display a workspace bar
# Use i3blocks to generete the status line.
bar {
  status_command i3blocks
  mode hide
  position bottom
  # height 32 # px
  strip_workspace_numbers yes
  tray_output primary
  font pango:SF Mono 9
  separator_symbol " "
  colors {
    # <colorclass>     <border> <background> <text>
    focused_workspace  #ffffff  #ffffff      #000000
    active_workspace   #aaaaaa  #aaaaaa      #000000
    inactive_workspace #000000  #000000      #aaaaaa
    urgent_workspace   #900000  #900000      #ffffff
    binding_mode       #900000  #900000      #ffffff
  }
}

